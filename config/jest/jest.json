{
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}"
  ],
  "rootDir": "../../",
  "coverageDirectory": "<rootDir>/coverage",
  "moduleDirectories": [
    "<rootDir>/src",
    "<rootDir>/node_modules"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json"
  ],
  "moduleNameMapper": {
    "^.+\\.(css)$": "<rootDir>/config/jest/style-mock"
  },
  "snapshotSerializers": ["<rootDir>/node_modules/jest-serializer-enzyme"],
  "setupFiles": [
    "babel-polyfill"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/config/jest/jasmine-setup.js",
  "testRegex": "(/__tests__/.*\\.(test))\\.(js|jsx)$",
  "testURL": "http://localhost",
  "transform": {
    "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
  }
}
